<h1>Chef Tracker</h1>
<ul>
  {{#each chefs as |chef|}}
    {{#if chef.isHere}}
      <li class="is-here">
        {{chef.name}}
        <button {{action 'makeAbsent' chef}}>Exit</button>
      </li>
    {{else}}
      <li class="not-here">
        {{chef.name}}
        <button {{action 'makePresent' chef}}>Enter</button>
      </li>
    {{/if}}
  {{/each}}
</ul>
